<footer class="store-footer enhanced-footer">
	{# Dynamic gradient background #}
	<div class="footer-bg-animation">
		<div class="gradient-orb gradient-orb-1"></div>
		<div class="gradient-orb gradient-orb-2"></div>
		<div class="gradient-orb gradient-orb-3"></div>
	</div>
	
	<div aria-label="footer" class="store-footer__inner relative z-10">
		<div class="container grid grid-col-1 lg:grid-cols-6 gap-8 lg:gap-6">
			
			{# Enhanced Store Info Section #}
			<div class="lg:col-span-2 rtl:lg:pl-20 ltr:lg:pr-20">
				<a href="{{ link('/') }}" class="flex items-center m-0 mb-6 group">
					{% if store.logo %}
						<img src="{{ store.logo }}" alt="{{ store.name }}" class="w-12 h-12 mr-3 transition-transform duration-300 group-hover:scale-110">
					{% endif %}
					<h3 class="text-2xl font-bold bg-gradient-to-r from-blue-600 to-purple-600 bg-clip-text text-transparent">{{store.name}}</h3>
				</a>
				
				{% if store.description %}
					<p class="max-w-sm leading-6 mb-6 text-gray-600 dark:text-gray-300">
						{{ store.description|raw }}
					</p>
				{% endif %}

				{# Enhanced Social Media Section #}
				<div class="hidden lg:block mb-6">
					<h4 class="text-sm font-semibold text-gray-800 dark:text-gray-200 mb-3">تابعنا على</h4>
					<div class="social-buttons-enhanced flex gap-3">
						{# These would be populated by salla-social component with enhanced styling #}
						<salla-social class="enhanced-social"></salla-social>
					</div>
				</div>

				{# Newsletter Signup Enhancement #}
				<div class="newsletter-enhanced bg-gradient-to-br from-blue-50 to-purple-50 dark:from-blue-900/20 dark:to-purple-900/20 p-4 rounded-lg border border-blue-100 dark:border-blue-800">
					<div class="flex items-center mb-3">
						<div class="w-8 h-8 bg-gradient-to-br from-blue-500 to-purple-600 rounded-full flex items-center justify-center mr-3">
							<i class="sicon-mail text-white text-sm"></i>
						</div>
						<h4 class="font-semibold text-gray-800 dark:text-gray-200">النشرة الإخبارية</h4>
					</div>
					<p class="text-sm text-gray-600 dark:text-gray-400 mb-3">احصل على أحدث العروض والمنتجات</p>
					<form class="newsletter-form flex gap-2">
						<input type="email" placeholder="البريد الإلكتروني" 
							   class="flex-1 px-3 py-2 text-sm border border-gray-200 dark:border-gray-600 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 dark:bg-gray-700 dark:text-white">
						<button type="submit" class="newsletter-btn px-4 py-2 bg-gradient-to-r from-blue-500 to-purple-600 text-white text-sm rounded-lg hover:from-blue-600 hover:to-purple-700 transition-all duration-300 transform hover:scale-105">
							<i class="sicon-arrow-left rtl:rotate-180"></i>
						</button>
					</form>
				</div>

				{# VAT Information with enhanced styling #}
				{% if store.settings.tax.number %}
					<div class="flex rtl:space-x-reverse space-x-2 items-end mt-6 p-3 bg-gray-50 dark:bg-gray-800 rounded-lg">
						{% if store.settings.tax.certificate %}
							<a class="load-img-onclick hover:scale-105 transition-transform duration-200" data-modal-id="modal-value-tax" href="#/" alt="{{ store.settings.tax.number }}">
								<img width="100%" height="100%" src="{{ 'images/s-empty.png' | cdn }}" data-src="{{'images/tax.png' | cdn(70,70)}}" class="lazy w-10 rounded-sm hover:opacity-80 transition-opacity" alt="value added tax">
							</a>
						{% endif %}
						<div>
							<p class="text-sm text-text-grey mb-1">{{ trans('common.elements.tax_number') }}</p>
							<b class="text-sm font-semibold">{{ store.settings.tax.number }}</b>
						</div>
					</div>

					{% if store.settings.tax.certificate %}
						<salla-modal sub-title-first sub-title="{{ trans('common.elements.tax_number') }}" modal-title="{{ store.settings.tax.number }}" id="modal-value-tax">
							<div class="flex justify-center max-w-full">
								<img class="w-full" loading="lazy" 
								src="{{ 'images/s-empty.png' | cdn }}" 
								data-src="{{ store.settings.tax.certificate }}" 
								alt="{{ store.settings.tax.number }}"/>
							</div>
						</salla-modal>
					{% endif %}
				{% endif %}
			</div>

			{# Enhanced Pages Links Section #}
			<div class="footer-section">
				<h3 class="footer-section-title relative">
					{{ trans('blocks.footer.pages_links') }}
					<span class="section-title-line"></span>
				</h3>
				<div class="footer-links-enhanced">
					<salla-menu source="footer" class="enhanced-footer-menu"></salla-menu>
				</div>
			</div>

			{# Enhanced Contact Section #}
			<div class="footer-section">
				<h3 class="footer-section-title relative">
					اتصل بنا
					<span class="section-title-line"></span>
				</h3>
				
				<div class="contact-enhanced">
					<salla-contacts class="enhanced-contacts"></salla-contacts>
					
					{# Interactive Map Preview #}
					<div class="map-preview mt-4 relative">
						<div class="map-placeholder bg-gradient-to-br from-blue-100 to-purple-100 dark:from-blue-900/30 dark:to-purple-900/30 h-32 rounded-lg flex items-center justify-center cursor-pointer hover:from-blue-200 hover:to-purple-200 dark:hover:from-blue-800/30 dark:hover:to-purple-800/30 transition-all duration-300" onclick="openStoreMap()">
							<div class="text-center">
								<i class="sicon-location text-2xl text-blue-600 mb-2"></i>
								<p class="text-sm font-medium text-gray-700 dark:text-gray-300">عرض الموقع على الخريطة</p>
							</div>
						</div>
					</div>
				</div>

				<div class="lg:hidden contact-social mt-6">
					<salla-social class="enhanced-social-mobile"></salla-social>
				</div>
			</div>

			{# Enhanced Apps Section #}
			<div class="lg:col-span-2 rtl:lg:pr-20 ltr:lg:pl-20">
				<h3 class="footer-section-title relative mb-6">
					حمل التطبيق
					<span class="section-title-line"></span>
				</h3>
				
				{# App Download with QR Code #}
				<div class="app-download-enhanced">
					<salla-apps-icons class="enhanced-app-icons"></salla-apps-icons>
					
					{# QR Code for mobile app #}
					<div class="qr-code-section bg-white dark:bg-gray-800 p-4 rounded-lg shadow-sm mt-4">
						<div class="qr-code-container flex items-center gap-3">
							<div class="qr-code-placeholder w-16 h-16 bg-gradient-to-br from-gray-100 to-gray-200 dark:from-gray-700 dark:to-gray-600 rounded-lg flex items-center justify-center">
								<i class="sicon-qr-code text-2xl text-gray-600 dark:text-gray-400"></i>
							</div>
							<div>
								<p class="text-sm font-medium text-gray-800 dark:text-gray-200">امسح الكود</p>
								<p class="text-xs text-gray-600 dark:text-gray-400">لتحميل التطبيق</p>
							</div>
						</div>
					</div>
				</div>
				
				{# Customer Reviews Preview #}
				<div class="reviews-preview mt-6 p-4 bg-gradient-to-br from-yellow-50 to-orange-50 dark:from-yellow-900/20 dark:to-orange-900/20 rounded-lg">
					<div class="flex items-center mb-3">
						<div class="rating-stars flex text-yellow-400 mr-2">
							<i class="sicon-star2 text-sm"></i>
							<i class="sicon-star2 text-sm"></i>
							<i class="sicon-star2 text-sm"></i>
							<i class="sicon-star2 text-sm"></i>
							<i class="sicon-star2 text-sm"></i>
						</div>
						<span class="text-sm font-semibold text-gray-800 dark:text-gray-200">4.9</span>
					</div>
					<p class="text-sm text-gray-600 dark:text-gray-400">"تجربة تسوق رائعة ومنتجات عالية الجودة"</p>
					<p class="text-xs text-gray-500 dark:text-gray-500 mt-2">- أحمد محمد</p>
				</div>
			</div>

		</div>
	</div>

	{# Enhanced Footer Bottom #}
	<div class="footer-bottom border-t border-gray-200 dark:border-gray-700 bg-gray-50/50 dark:bg-gray-800/50 backdrop-blur-sm">
		<div class="container">
			<div class="md:flex items-center justify-between py-6 text-center">
				<div class="footer-left mb-4 md:mb-0">
					<span class="text-sm copyright-text text-gray-600 dark:text-gray-400">
						{% hook copyright %}
					</span>
				</div>
				
				<div class="footer-center mb-4 md:mb-0">
					<div class="flex items-center justify-center gap-4">
						{# Dark/Light Mode Toggle #}
						<button id="theme-toggle" class="theme-toggle-btn w-8 h-8 rounded-full bg-gray-200 dark:bg-gray-700 flex items-center justify-center hover:bg-gray-300 dark:hover:bg-gray-600 transition-colors duration-300">
							<i class="sicon-moon dark:hidden text-sm"></i>
							<i class="sicon-sun hidden dark:block text-sm"></i>
						</button>
						
						{# Language Switcher Enhanced #}
						<div class="language-switcher">
							<salla-localization-modal>
								<button class="language-btn flex items-center gap-2 px-3 py-1 text-sm text-gray-600 dark:text-gray-400 hover:text-gray-800 dark:hover:text-gray-200 transition-colors duration-300">
									<i class="sicon-global text-sm"></i>
									<span>العربية</span>
								</button>
							</salla-localization-modal>
						</div>
					</div>
				</div>
				
				<div class="footer-right">
					<salla-payments class="enhanced-payments"></salla-payments>
				</div>
			</div>
		</div>
	</div>

	{# Floating Action Button #}
	<div class="floating-actions fixed bottom-6 right-6 z-40 flex flex-col gap-3">
		{# Back to Top #}
		<button id="back-to-top" class="floating-btn bg-gradient-to-r from-blue-500 to-purple-600 text-white w-12 h-12 rounded-full shadow-lg hover:shadow-xl transition-all duration-300 transform hover:scale-110 opacity-0">
			<i class="sicon-arrow-up"></i>
		</button>
		
		{# Quick Contact #}
		<button id="quick-contact" class="floating-btn bg-gradient-to-r from-green-500 to-emerald-600 text-white w-12 h-12 rounded-full shadow-lg hover:shadow-xl transition-all duration-300 transform hover:scale-110">
			<i class="sicon-chat"></i>
		</button>
	</div>
</footer>

<span class="hidden bottom-2 rtl:pl-24 ltr:pr-24 md:grid-cols-3 opacity-40"></span>
