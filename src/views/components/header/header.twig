{#
| Variable         | Type    | Description                     |
|------------------|---------|---------------------------------|
| cart             | object  |                                 |
| cart.items_count | int     |                                 |
| cart.total       | string  | Formatted total ex: "١٠٠ ر.س"   |
#}
<header class="store-header">
  {# Main Header with new design #}
  <div id="mainnav" class="main-nav-container bg-white shadow-sm">
      <div class="inner bg-inherit">
          <div class="container">
              <div class="flex items-center justify-between py-4">
                  {# Left side - CTA Button #}
                  <div class="flex items-center">
                      <button class="cta-btn bg-blue-600 hover:bg-blue-700 text-white px-6 py-2 rounded-full text-sm font-medium transition-colors">
                          أجيراقلق
                      </button>
                  </div>

                  {# Center - Navigation Menu #}
                  <nav class="hidden lg:flex items-center space-x-8 rtl:space-x-reverse">
                      <a href="{{ store.url }}" class="nav-link text-gray-600 hover:text-gray-900 text-sm font-medium">
                          الرئيسية
                      </a>
                      <a href="{{ store.url }}/page/about" class="nav-link text-gray-600 hover:text-gray-900 text-sm font-medium">
                          من نحن
                      </a>
                      <a href="{{ store.url }}/page/pricing" class="nav-link text-gray-600 hover:text-gray-900 text-sm font-medium">
                          خطط الأسعار
                      </a>
                      <a href="{{ store.url }}/page/faq" class="nav-link text-gray-600 hover:text-gray-900 text-sm font-medium">
                          أسئلة شائعة
                      </a>
                  </nav>

                  {# Right side - Language/Currency and User Actions #}
                  <div class="flex items-center gap-4">
                      {# Language & Currency Component #}
                      {% if store.settings.is_multilingual or store.settings.currencies_enabled %}
                          <button type="button" onclick="salla.event.dispatch('localization::open')" class="flex items-center text-blue-600 text-sm font-medium hover:text-blue-700">
                              <span class="ml-1">رعاية</span>
                              <i class="text-blue-600 ml-1">❄</i>
                          </button>
                          <salla-localization-modal></salla-localization-modal>
                      {% endif %}

                      {# Mobile menu button #}
                      <button class="lg:hidden p-2" onclick="salla.event.dispatch('mobile-menu::toggle')" aria-label="Open menu">
                          <i class="sicon-menu text-gray-600 text-xl"></i>
                      </button>

                      {# User menu for logged in users #}
                      {% if user.type=='user' %}
                        <salla-user-menu avatar-only show-header class="hidden lg:block"></salla-user-menu>
                      {% else %}
                          <button class="hidden lg:block p-2" aria-label="user-icon" onclick="salla.event.dispatch('login::open')">
                            <i class="sicon-user-circle text-gray-600 text-xl"></i>
                          </button>
                      {% endif %}

                      {# Cart #}
                      <salla-cart-summary class="hidden lg:block">
                        <i slot="icon" class="sicon-shopping-bag text-gray-600 text-xl"></i>
                      </salla-cart-summary>
                  </div>
              </div>
          </div>
      </div>
  </div>

  {# Mobile Menu Overlay #}
  <div id="mobile-menu" class="lg:hidden fixed inset-0 z-50 bg-black bg-opacity-50 hidden">
      <div class="bg-white w-80 h-full p-6">
          <div class="flex justify-between items-center mb-6">
              <h3 class="text-lg font-semibold">القائمة</h3>
              <button onclick="salla.event.dispatch('mobile-menu::close')" class="p-2">
                  <i class="sicon-close text-xl"></i>
              </button>
          </div>
          <nav class="space-y-4">
              <a href="{{ store.url }}" class="block py-2 text-gray-700 hover:text-blue-600">الرئيسية</a>
              <a href="{{ store.url }}/page/about" class="block py-2 text-gray-700 hover:text-blue-600">من نحن</a>
              <a href="{{ store.url }}/page/pricing" class="block py-2 text-gray-700 hover:text-blue-600">خطط الأسعار</a>
              <a href="{{ store.url }}/page/faq" class="block py-2 text-gray-700 hover:text-blue-600">أسئلة شائعة</a>
          </nav>
          <div class="mt-8 pt-6 border-t">
              {% if user.type=='user' %}
                <salla-user-menu show-header></salla-user-menu>
              {% else %}
                  <button class="w-full text-left py-2" onclick="salla.event.dispatch('login::open')">
                    <i class="sicon-user-circle ml-2"></i> تسجيل الدخول
                  </button>
              {% endif %}
              <salla-cart-summary class="mt-4">
                <i slot="icon" class="sicon-shopping-bag ml-2"></i>
              </salla-cart-summary>
          </div>
      </div>
  </div>
</header>

{# Keep the scopes functionality #}
{% if store.scope %}
    <salla-scopes selection="{{ store.scope.display_as == 'popup' ? 'mandatory' : 'optional' }}"></salla-scopes>
{% endif %}
